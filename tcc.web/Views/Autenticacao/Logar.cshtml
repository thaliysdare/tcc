@using tcc.web.Utils;
@model AutenticacaoViewModel
@{
    ViewData["Title"] = "Autenticação";
}

<div class="row justify-content-md-center">
    <div class="col-sm-10 col-lg-6 col-md-4">

        <div class="card">

            <div class="card-header">
                Autenticação oficina
            </div>

            <div class="card-body">

                <form id="formLogin" class="row g-3" asp-action="entrar" asp-controller="autenticacao" asp-route-returnlink="@ViewData["returnlink"]" method="post">
                    <div class="form-validacao col-12"></div>

                    <div class="col-12">
                        <label asp-for="Login" class="form-label"></label>
                        <input asp-for="Login" type="text" class="form-control form-control-sm" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Senha" class="form-label"></label>
                        <input asp-for="Senha" type="password" class="form-control form-control-sm" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="col-6">
                        <a class="text-decoration-none" asp-action="registrar" asp-controller="autenticacao">Novo por aqui?</a>
                    </div>

                    <div class="col-6 text-end">
                        <button type="submit" class="btn btn-sm btn-primary">Entrar no sistema</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>

<script>

</script>